<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>hrstatus</display-name>

    <!-- Welcome page -->
    <welcome-file-list>
        <welcome-file>/home/home.jsp</welcome-file>
    </welcome-file-list>

    <!-- Security configurations -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                AuthenticatedUsers
            </web-resource-name>
            <url-pattern>/home/*</url-pattern>
            <url-pattern>/rest/user/*</url-pattern>
            <url-pattern>/user/*</url-pattern>
            <url-pattern>/rest/utils/resource/*</url-pattern>
            <url-pattern>/rest/verification/*</url-pattern>
            <!-- OperatinSystem Resource -->
            <url-pattern>/rest/resource/operating-system/list</url-pattern>
            <!-- Databases Resource -->
            <url-pattern>/rest/resource/database/list</url-pattern>
            <!-- verifications -->
            <url-pattern>/verification/*</url-pattern>
            <!-- common endpoints -->
            <url-pattern>/rest/common/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>
                Authenticated users
            </description>
            <role-name>ROLE_USER</role-name>
            <role-name>ROLE_REST</role-name>
            <role-name>ROLE_ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                hrstatusAdmins
            </web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/rest/user/admin/*</url-pattern>
            <url-pattern>/rest/setup/*</url-pattern>
            <url-pattern>/rest/utils/mail/test</url-pattern>
            <url-pattern>/rest/resource/*</url-pattern>
            <url-pattern>/rest/verification/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>
                Admins users only
            </description>
            <role-name>ROLE_ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>ROLE_ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>ROLE_USER</role-name>
    </security-role>
    <security-role>
        <!-- Need to define what this role can use -->
        <role-name>ROLE_REST</role-name>
    </security-role>
    <security-role>
        <!-- NOT IMPLEMENTED YET -->
        <role-name>ROLE_LOGREADER</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>√Årea Restrita</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp?failed=true</form-error-page>
        </form-login-config>
    </login-config>

    <session-config>
        <session-timeout>10</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <!-- End of Security configurations -->


    <!-- Error pages -->
    <error-page>
        <error-code>400</error-code>
        <location>/errors/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/errors/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/errors/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/500.jsp</location>
    </error-page>
    <!-- End Error pages -->

    <!-- uncomment this to enable @RolesAllowed on rest endpoints -->
    <!--context-param>
        <param-name>resteasy.role.based.security</param-name>
        <param-value>true</param-value>
    </context-param-->

